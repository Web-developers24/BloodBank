<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="org.example.controller.RecipientController"
          hgap="10" vgap="10" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Recipient Registration"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"
           GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

    <Label text="Full Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="txtName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Blood Group:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="txtBloodGroup" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Phone:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="txtPhone" GridPane.rowIndex="3" GridPane.columnIndex="1"/>


    <Button text="Save Recipient"
            GridPane.rowIndex="4" GridPane.columnIndex="1"
            onAction="#saveRecipient"/>

    <Label fx:id="lblStatus"
           textFill="green"
           GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Button text="â¬… Back to Main Menu"
            onAction="#goBackToMenu"
            style="-fx-font-size: 13px; -fx-background-color: #dfe6e9;"/>



</GridPane>

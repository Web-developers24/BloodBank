<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controller.LoginController"
            prefWidth="420" prefHeight="320"
            style="-fx-background-color: linear-gradient(to bottom right, #ffffff, #f0f4f8);">

    <VBox alignment="CENTER" spacing="20"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- Title -->
        <Label text="ðŸ©¸ Blood Bank Login"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2b2b2b;"/>

        <!-- Input Fields -->
        <VBox alignment="CENTER" spacing="12">
            <TextField fx:id="txtUsername"
                       promptText="Enter Username"
                       style="-fx-pref-width: 220; -fx-alignment: center; -fx-prompt-text-fill: derive(-fx-control-inner-background, -30%); -fx-font-size: 13px; -fx-padding: 8;"/>

            <PasswordField fx:id="txtPassword"
                           promptText="Enter Password"
                           style="-fx-pref-width: 220; -fx-alignment: center; -fx-prompt-text-fill: derive(-fx-control-inner-background, -30%); -fx-font-size: 13px; -fx-padding: 8;"/>
        </VBox>

        <!-- Login Button -->
        <Button text="Login" onAction="#handleLogin"
                style="-fx-pref-width: 220; -fx-font-size: 14px; -fx-background-color: #c62828; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;"/>

        <!-- Status Label -->
        <Label fx:id="lblStatus" text=""
               style="-fx-text-fill: red; -fx-font-size: 12px;"/>

    </VBox>

</AnchorPane>
